%table.table
  %tr
    %th Name
    %td=callback.name
      
  %tr
    %th Pattern
    %td
      - if !!callback.pretty_pattern
        ~ callback.pretty_pattern.html_safe
      - else
        %pre{style: 'overflow: auto; white-space: pre-wrap;'}>~ callback.pattern
  %tr
    %th{nowrap: :nowrap} Match Scheme
    %td=callback.match_scheme.titleize
  %tr
    %th Command
    %td
      .media
        .media-body
          - if !!callback.pretty_command
            ~ callback.pretty_command.html_safe
          - else
            %pre{style: 'overflow: auto; white-space: pre-wrap;'}>~ callback.command
        .media-right= callback_run_link(callback, class: 'btn btn-success btn-xs')
  %tr
    %th Cooldown
    %td=callback.cooldown
  %tr
    %th Ran
    %td
      .media
        .media-body{id: "callback_ran_at_#{callback.id}"}
          =callback_ran(callback)
        .media-right
          = callback_reset_link(callback, class: 'btn btn-warning btn-xs')
  %tr
    %th Status
    %td{id: "callback_status_#{callback.id}"}=callback_status(callback)
  %tr
    %th{nowrap: :nowrap} Last Match
    %td
      %code{id: "callback_last_match_#{callback.id}"}= callback.last_match
  %tr
    %th{nowrap: :nowrap} Last Command Output
    %td
      %code{id: "callback_last_command_output_#{callback.id}"}= callback.last_command_output

.modal-footer
  %span{style: 'float: left;'}
    = callback_edit_link(callback)
    = callback_enable_link(callback)
    = callback_delete_link(callback)
  %span{style: 'float: right;'}
    = link_to 'First', admin_server_callbacks_path(), id: :first_callback, class: 'btn btn-default', data: { remote: true, target: '#show_callback'}
    = link_to 'Previous', admin_server_callbacks_path(), id: :previous_callback, class: 'btn btn-default', data: { remote: true, target: '#show_callback'}
    = link_to 'Next', admin_server_callbacks_path(), id: :next_callback, class: 'btn btn-default', data: { remote: true, target: '#show_callback'}
    = link_to 'Last', admin_server_callbacks_path(), id: :last_callback, class: 'btn btn-default', data: { remote: true, target: '#show_callback'}
    - if defined? modal
      %button.btn.btn-default{type: "button", data: { dismiss: :modal } } Close
    - else
      = link_to 'Close', admin_server_callbacks_path, class: 'btn btn-default'
  
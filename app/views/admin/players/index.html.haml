.row
  %h3
    Players
    %button.btn.btn-info.badge{type: :button, data: { toggle: :modal, target: '#explain_players'}} ?
  .modal.fade#explain_players{tabindex: -1, role: :dialog, 'aria-labelledby' => 'explain_players_label', 'aria-hidden' => true}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{type: :button, 'aria-label' => 'Close', data: { dismiss: :modal }}
            %span{'aria-hidden' => true} &times;
          %h4.modal-title#explain_players_label Explanation of Links
        .modal-body
          %p Players who have been recorded to database by callback, if enabled.

%div{style: 'float: right'}
  = form_tag url_for(action: controller.action_name), method: :get do
    = hidden_field_tag :sort_field, @sort_field
    = hidden_field_tag :sort_order, @sort_order
    = hidden_field_tag :filter, @filter
    = hidden_field_tag :player_id, @player_id
    = text_field_tag :query, @query, placeholder: 'Query Text'
    = submit_tag 'Search', class: 'btn btn-info btn-xs'

%ul.nav.nav-tabs
  %li{class: @filter == 'all' ? 'active' : ''}
    = link_to 'All', admin_players_path(player_id: @player_id), 'aria-controls' => "all"
  %li{class: @filter == 'only_today' ? 'active' : ''}
    = link_to 'Today', admin_players_path(player_id: @player_id, filter: 'only_today'), 'aria-controls' => "non-system"
  %li{class: @filter == 'only_logged_in' ? 'active' : ''}
    = link_to 'Logged In', admin_players_path(player_id: @player_id, filter: 'only_logged_in'), 'aria-controls' => "non-system"

.tab-contents
  .tab-panel.tab-pane.active
    .row.table-responsive
      %table.table
        %thead
          %tr
            %th=sortable_header_link 'Nick', 'lower(nick)'
            %th=sortable_header_link 'Last Nick', 'lower(last_nick)'
            %th=sortable_header_link 'Spam Ratio', 'spam_ratio'
            %th=sortable_header_link 'Links', 'links_count'
            %th=sortable_header_link 'Logged In', 'last_login_at'
            %th=sortable_header_link 'Created', 'created_at'
            %th
        %tbody
          - @players.each do |player|
            = render 'player_row', player: player

%p= will_paginate @players
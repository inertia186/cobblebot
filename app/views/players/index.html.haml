.row
  %h3
    Players connected: 
    = ServerQuery.numplayers
    of
    = ServerQuery.maxplayers

.row
  %table.table
    %thead
      %tr
        %th
        %th Player
        %th Logged in
        %th Biomes Explored
    %tbody
      - @players.each do |player|
        %tr
          %td{align: :right}= image_tag "https://minotar.net/avatar/#{player.nick}/16.png", width: 16, height: 16, alt: player.nick
          %td= player.nick
          -if !!player
            %td{title: player.last_login_at}
              = distance_of_time_in_words_to_now player.last_login_at
              ago
            %td= player.explore_all_biome_progress
    %tr
      %th{colspan: 4} Logged in Today
      - @players_today.each do |player|
        %tr
          %td{align: :right}= image_tag "https://minotar.net/avatar/#{player.nick}/16.png", width: 16, height: 16, alt: player.nick
          %td= player.nick
          -if !!player
            %td{title: player.last_login_at}
              = distance_of_time_in_words_to_now player.last_login_at
              ago
            %td= player.explore_all_biome_progress
